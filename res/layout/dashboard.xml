<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray" >

    <Button
        android:id="@+id/dashboard_btnOrder"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Order"
        android:textSize="20dp" />

    <Button
        android:id="@+id/dashboard_btnQueuedOrder"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dashboard_btnOrder"
        android:layout_below="@+id/dashboard_btnOrder"
        android:text="Queued Order"
        android:textSize="20dp" />

    <Button
        android:id="@+id/dashboard_btnTakePicture"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dashboard_btnQueuedOrder"
        android:layout_below="@+id/dashboard_btnQueuedOrder"
        android:text="Take Picture"
        android:textSize="20dp" />

    <Button
        android:id="@+id/dashboard_btnQueuedPicture"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dashboard_btnTakePicture"
        android:layout_below="@+id/dashboard_btnTakePicture"
        android:text="Queued Picture"
        android:textSize="20dp" />
    
        <Button
        android:id="@+id/dashboard_btnReports"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dashboard_btnQueuedPicture"
        android:layout_below="@+id/dashboard_btnQueuedPicture"
        android:text="Reports"
        android:textSize="20dp" />

    <Button
        android:id="@+id/dashboard_btnLogOut"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dashboard_btnReports"
        android:layout_below="@+id/dashboard_btnReports"
        android:text="Log Out"
        android:textSize="20dp" />

</RelativeLayout>