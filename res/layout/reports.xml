<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray" >

    <RelativeLayout
        android:id="@+id/reports_layoutFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/reports_imgFrom"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/calendar_icon" />

        <EditText
            android:id="@+id/reports_edtDateFrom"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/reports_imgFrom"
            android:layout_centerHorizontal="true"
            android:inputType="date" />

        <TextView
            android:id="@+id/reports_txtFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/reports_edtDateFrom"
            android:layout_alignBottom="@+id/reports_edtDateFrom"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:text="From"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reports_layoutTo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:layout_below="@+id/reports_layoutFrom" >

        <TextView
            android:id="@+id/reports_txtTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="7dp"
            android:text="To"
            android:textColor="@android:color/black"
            android:textSize="20dp"
             />

    <EditText
        android:id="@+id/reports_edtDateTo"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="date"
         />



    <ImageView
        android:id="@+id/reports_imgTo"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/reports_edtDateTo"        
        android:src="@drawable/calendar_icon" />
    
    </RelativeLayout>

    <CheckBox
        android:id="@+id/reports_chkTargetProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reports_layoutFrom"
        android:layout_below="@+id/reports_layoutTo"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="76dp" />

    <Button
        android:id="@+id/reports_btnTargetProducts"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/reports_chkTargetProducts"
        android:layout_alignBottom="@+id/reports_chkTargetProducts"
        android:layout_centerHorizontal="true"
        android:text="Twenty Products"
        android:textSize="20dp" />

</RelativeLayout>